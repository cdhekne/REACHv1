<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Landing"
    android:background="@drawable/landing">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/vidLayout"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blobView"
            android:background="@drawable/landing_blob"
            android:layout_marginBottom="100dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="false">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ddBtn"
            android:background="@drawable/dd_selector"
            android:layout_above="@+id/stopBtn"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stopBtn"
            android:background="@drawable/stop_selector"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/ddBtn"
            android:layout_marginLeft="-15dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sticBtn"
            android:background="@drawable/stic_selector"
            android:layout_alignParentBottom="false"
            android:layout_toRightOf="@+id/stopBtn"
            android:layout_marginLeft="40dp"
            android:layout_alignParentEnd="false"
            android:layout_below="@+id/relaxBtn"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="10dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relaxBtn"
            android:background="@drawable/relax_selector"
            android:layout_above="@+id/stopBtn"
            android:layout_toRightOf="@+id/ddBtn"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="15dp" />
    </RelativeLayout>
</RelativeLayout>
