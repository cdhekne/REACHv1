<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="asu.reach.WorryHeads"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/oOne"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/wh_card"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="false"
        android:layout_above="@+id/oThree" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/oTwo"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:background="@drawable/wh_card"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/oFour"
        android:layout_marginRight="10dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/oThree"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/wh_card"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/oFour"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/wh_card"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/sView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/s_selector"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:clickable="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/tView"
        android:background="@drawable/t_selector"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:clickable="true" />

</RelativeLayout>
